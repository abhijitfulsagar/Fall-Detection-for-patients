<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    tools:context="com.example.nabha.falldetection.FallDetection">


    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:width="300dp"
        android:height="50dp"
        android:text="Press stop if you are ok"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/care_taker_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/label"
        android:layout_below="@+id/label"
        android:layout_marginTop="20dp"
        android:text="Caretaker Information:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/care_taker_text"
        android:layout_marginTop="32dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!--<TextView-->
        <!--android:id="@+id/number_text"-->
        <!--android:layout_width="300dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_alignStart="@+id/name_text"-->
        <!--android:layout_below="@+id/name_text"-->
        <!--android:layout_marginTop="49dp"-->
        <!--android:textColor="@color/colorPrimary"-->
        <!--android:textSize="18sp"-->
        <!--android:textStyle="bold" />-->

    <TextView
        android:id="@+id/location"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name_text"
        android:layout_marginTop="35dp"
        android:width="250dp"
        android:height="50dp"
        android:text="Location:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:background="@color/colorPrimaryDark"
        android:text="Stop"
        android:textColor="@android:color/background_light" />


</RelativeLayout>
