{
    "env": {
        "browser": true,
        "commonjs": true
    },
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
            "error",
            120
        ],
        "no-multiple-empty-lines": [
            "error",
            { "max": 1, "maxEOF": 1 }
        ]
    }
}